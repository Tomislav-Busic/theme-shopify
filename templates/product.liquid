<h1>{{product.title}}</h1>
<p>{{ product.price | money_with_currency }}</p>
<div>
    {{ product.description }}
</div>

{% form 'product', product: product %}
    <select name="id">
        {% for product.variants %}
            <option value="{{ variant.id }}">
                  {{ variant.title }}  
            </option>
        {% endfor %}
    </select>
{% endform %}